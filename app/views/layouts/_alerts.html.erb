<div
    data-controller="alert"
    data-alert-target="container"
    class="flex items-center p-4 mb-4 text-red-800 rounded-lg bg-red-100 dark:bg-gray-800 dark:text-red-400 transition-opacity duration-300" role="alert">
  <%= icon "circle-alert" %>
  <div class="ms-3 text-sm font-medium">
    <%= alert %>
  </div>
  <button 
    data-action="alert#dismiss"
    type="button" class="ms-auto -mx-1.5 -my-1.5 cursor-pointer bg-red-100 text-red-500 rounded-lg focus:ring-2 focus:ring-red-400 p-1.5 hover:bg-red-200 inline-flex items-center justify-center h-8 w-8 dark:bg-gray-800 dark:text-red-400 dark:hover:bg-gray-700" data-dismiss-target="#alert-1" aria-label="dismiss">
    <span class="sr-only">dismiss</span>
    <%= icon("x") %>
  </button>
</div>